<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="157dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:text="Thêm mới Album" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="137dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="73dp"
        android:text="Mã Album" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="119dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="142dp"
        android:text="Tên Album" />

    <EditText
        android:id="@+id/editTextMaAlbum_Them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="29dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editTextTenAlbum_Them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="115dp"
        android:layout_marginEnd="27dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btnLuuAlbum"
        android:layout_width="208dp"
        android:layout_height="59dp"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/editTextTenAlbum_Them"
        android:layout_below="@+id/textView4"
        android:layout_marginEnd="22dp"
        android:layout_marginTop="42dp"
        android:layout_toRightOf="@+id/textView3"
        android:text="Lưu Album này" />

    <Button
        android:id="@+id/btnXoaAlbum_Them"
        android:layout_width="135dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignTop="@+id/btnLuuAlbum"
        android:layout_marginStart="33dp"
        android:text="Xóa Trắng" />

</RelativeLayout>